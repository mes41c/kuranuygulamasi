            text: "Ana Menüye Dön"
            font_size: dp(16)
            size_hint_y: None
            height: dp(50)
            on_press: root.go_to_main_menu()

<SettingsScreen>:
    favorite_hocas_layout: favorite_hocas_layout_id
    status_message_settings: status_message_settings_id
    max_favorites_slider: max_fav_slider_id
    max_favorites_value_label: max_fav_value_label_id
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)
        Label:
            text: "Ayarlar"
            font_size: dp(24)
            size_hint_y: None
            height: self.texture_size[1] + dp(10)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            Label:
                text: "Okuma Modu Max Favori Sayısı:"
                size_hint_x: 0.6
                font_size: dp(15)
                halign: 'left'
                valign: 'middle'
                text_size: self.width, None
            Slider:
                id: max_fav_slider_id
                min: 3
                max: 7
                step: 1
                value: 3
                size_hint_x: 0.3
